{$DOMAIN:localhost} {
    # Serve the frontend PWA
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy backend:8000
    }

    handle {
        root * /srv/frontend
        try_files {path} /index.html
        file_server
    }

    # Rate limiting
    rate_limit {
        zone api {
            key {remote_host}
            events 100
            window 1m
        }
    }
}
